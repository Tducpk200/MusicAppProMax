<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.musicapppromax">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:name=".Application.ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MusicAppProMax">
        <activity
            android:name=".Activity.AlbumDetails"
            android:exported="false" />
        <activity
            android:name=".Activity.PlayerActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.MainActivity$ViewPagerAdapter"
            tools:ignore="Instantiatable" />

        <service
            android:name=".Service.PlayerService"
            android:enabled="true" />

        <receiver android:name=".NotificationReceiver" android:enabled="true"
            android:exported="false"
            tools:ignore="IntentFilterExportedReceiver">

            <intent-filter>
                <action android:name="actionprevious" />
                <action android:name="actionnext" />
                <action android:name="actionplay" />
            </intent-filter>
        </receiver>
    </application>

</manifest>